{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<form class="max-w-md mx-auto mt-4 p-6 rounded shadow space-y-3 border border-gray-300" method="post">
    <h1 class="text-2xl font-bold text-center">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_row(registrationForm.lastName, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 bg-white text-gray-900 focus:outline-none focus:ring focus:ring-gray-300'}}) }}
        </div>

        <div>
            {{ form_row(registrationForm.firstName, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 bg-white text-gray-900 focus:outline-none focus:ring focus:ring-gray-300'}}) }}
        </div>

        <div>
            {{ form_row(registrationForm.email, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 bg-white text-gray-900 focus:outline-none focus:ring focus:ring-gray-300'}}) }}
        </div>

        <div>
            {{ form_row(registrationForm.phone, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 bg-white text-gray-900 focus:outline-none focus:ring focus:ring-gray-300'}}) }}
        </div>

        <div>
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 bg-white text-gray-900 focus:outline-none focus:ring focus:ring-gray-300'}}, {
                label: 'Password'
            }) }}
        </div>

        {# {{ form_row(registrationForm.roles, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 bg-white text-gray-900 focus:outline-none focus:ring focus:ring-gray-300'}}) }} #}

        <div class="flex items-center">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'border-gray-300 rounded focus:ring focus:ring-gray-300'}}) }}
            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 text-sm text-gray-900">
                {{ form_label(registrationForm.agreeTerms) }}
            </label>
        </div>

        <div class="text-center">
            <button type="submit" class="w-full border border-gray-300 rounded p-2 font-medium hover:ring focus:outline-none focus:ring focus:ring-gray-300 submit">
                S'inscrire
            </button>
        </div>

    {{ form_end(registrationForm) }}

    <a class="flex justify-self-center underline hover:no-underline hover:text-gray-600 mt-8" href="/login">Deja inscrit ? Appuyer ici pour vous connecter</a>

</div>
{% endblock %}
